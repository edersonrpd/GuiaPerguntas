<%- include ("partials/reader.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %> </h1>
    <%= pergunta.descricao %> </p>
    <hr>
    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label for="">Resposta</label>
      <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
      <br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-dark">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
       <div class="card">
         <div class="card-body">
           
          <%= resposta.corpo %> 
        </div>
       </div>
      <br>
    <% }) %>
  </div>
</body>

